@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject IJsonHelper Json;

@inject Final_Project_Web_Application.Data.ApplicationDBContext DBContext

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Final Project Web Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Final_Project_Web_Application.styles.css" asp-append-version="true" />
</head>
<body style="background-image: url('../../wwwroot/css/background.jpg');" onload="LoadDarkMode()">
    <header class="header">
        <a class="nav-link header-image" asp-area="" asp-controller="Home" asp-action="Index">
            @if((string)ViewData["IsDarkMode"] == "Yes")
            {
                <img src="\css\logo\logo_dark.png" alt="Girl in a jacket" width="450" height="65" asp-controller="Home" asp-action="Index">
            }
            else
            {  
                <img src="\css\logo\logo_light.png" alt="Girl in a jacket" width="450" height="65" asp-controller="Home" asp-action="Index">
            }
        </a>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid header-text">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Browse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Forum" asp-action="Index">Forums</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Support" asp-action="Index">Support</a>
                        </li>
                        @if ((string)TempData["HasLoggedIn"] == "Yes")
                        {
                            string UserID = (string)TempData["UserID"];
                            int IntegerUserID = int.Parse(UserID);

                            User SelectedUser = new User();

                            foreach(User CurrentUser in DBContext.Users)
                            {
                                if(CurrentUser.ID == IntegerUserID)
                                {
                                    SelectedUser = CurrentUser;
                                }
                            }

                            if(SelectedUser.SecLevel >= Final_Project_Web_Application.Models.User.SecurityLevel.Admin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="AdminPanel" asp-action="Index">Admin Panel</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <div class="input-group">
                                <select class="select-button" aria-label="Search by">
                                    <option value="all">All</option>
                                    <option value="title">Title</option>
                                    <option value="author">Author</option>
                                    <option value="author">Description</option>
                                </select>
                                <input type="text" class="form-control" placeholder="Search..." name="title" aria-label="Fiction search">
                            </div>
                        </li>
                        <li class="nav-item">
                            <label class="switch">
                                <input type="checkbox" id="DarkModeSwitch" name="IsDarkMode" onclick="SwitchDarkMode()">
                                <span class="slider round"></span>
                                <script>
                                    function SwitchDarkMode()
                                    {
                                        var element = document.body;
                                        element.classList.toggle("dark-mode");

                                        if (element.classList.contains("dark-mode"))
                                        {
                                            $.ajax({
                                                type: "POST",
                                                url: '/Home/WriteCookie',
                                                data: { Value: "Yes" },
                                            });
                                        }
                                        else
                                        {
                                            $.ajax({
                                                type: "POST",
                                                url: '/Home/WriteCookie',
                                                data: { Value: "No" },
                                            });
                                        }
                                    }

                                    function LoadDarkMode()
                                    {
                                        document.getElementById("DarkModeSwitch").checked = true;

                                        var IsDarkMode = '@ViewData["IsDarkMode"]';

                                        if (IsDarkMode == "Yes") {
                                            var element = document.body;
                                            element.classList.toggle("dark-mode");
                                        } 
                                    }
                                </script>
                            </label>
                            <style>
                                .switch {
                                    position: relative;
                                    display: inline-block;
                                    width: 60px;
                                    height: 34px;
                                    margin-left: 15px;
                                    margin-right: 15px;
                                }

                                /* Hide default HTML checkbox */
                                .switch input {
                                    opacity: 0;
                                    width: 0;
                                    height: 0;
                                }

                                /* The slider */
                                .slider {
                                    position: absolute;
                                    cursor: pointer;
                                    top: 0;
                                    left: 0;
                                    right: 0;
                                    bottom: 0;
                                    background-color: #2196F3;
                                    -webkit-transition: .4s;
                                    transition: .4s;
                                }

                                .slider:before {
                                    position: absolute;
                                    content: "";
                                    height: 26px;
                                    width: 26px;
                                    left: 4px;
                                    bottom: 4px;
                                    background-color: white;
                                    -webkit-transition: .4s;
                                    transition: .4s;
                                }

                                input:checked + .slider
                                {
                                    background-color: #404040;
                                }

                                input:focus + .slider {
                                    box-shadow: 0 0 1px #404040;
                                }

                                input:checked + .slider:before {
                                    -webkit-transform: translateX(26px);
                                    -ms-transform: translateX(26px);
                                    transform: translateX(26px);
                                }

                                /* Rounded sliders */
                                .slider.round {
                                    border-radius: 34px;
                                }

                                .slider.round:before {
                                    border-radius: 50%;
                                }
                            </style>
                        </li>
                        @if((string)ViewData["HasLoggedIn"] != "Yes")
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Login" asp-action="SignUp">Register</a>
                            </li>
                        }
                        else
                        {
                            // Profile Image and Dropdown, which will include the Logout Button.
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Login" asp-action="SignOut">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        .dark-mode
        {
            color: #d3d3d3;

            .form-control
            {
                background-color: #404040;
                color: white;
                border-color: hsla(0,0%,100%,.1)
            }

            .navbar-light .navbar-nav .nav-link.active, .navbar-light .navbar-nav .show > .nav-link
            {
                background-color: #404040;
                border-color: hsla(0,0%,100%,.1);
                color: #d3d3d3;
            }

            .input-group
            {
                background-color: #404040;
                color: #d3d3d3;
            }
            .header
            {
                background-color: #1e1e1e;
            }

            .select-button
            {
                background-color: #404040;
                color: #d3d3d3;
            }
        }

        .header
        {
            background-color: #b2d3fb;
        }

        .header-image
        {
            margin-left: 25px;
        }
        .header-text
        {
            margin-right: 100px;
            margin-left: 100px;
        }

        .navbar-light .navbar-nav .nav-link.active, .navbar-light .navbar-nav .show > .nav-link
        {
            padding-left: 30px;
            padding-right: 30px;
            padding-top: 0.75rem;
            height: 50px;
            background-color: #2e5575;
            color: #ffd575;
            border: 1px solid;
            border-color: #294459;
        }

        .border-bottom
        {
            border-bottom: 1px solid #818181!important;
        }

        .navbar {
            padding-bottom: 0px;
        }
    </style>

    <!-- Footer -->
    <div class="page-footer footer">
        <div class="container">
            <div class="pull-left">
                &copy; Our Library Web Application 2023
            </div>
        </div>
    </div>
    <div class="scroll-to-top" style="display: block;">
        <i></i>
    </div>
    <div class="scroll-to-top-tooltip" style="display: none"> Tap again to scroll to the top! </div>

    <ul class="social-icons">
        <li>
            <a href="https://facebook.com/royalroadl" target="_blank" rel="noopener noreferrer" data-original-title="facebook" class="facebook" aria-label="Our Facebook Page"></a>
        </li>
        <li>
            <a href="https://twitter.com/royalroadl" target="_blank" rel="noopener noreferrer" data-original-title="twitter" class="twitter" aria-label="Our Twitter Page"></a>
        </li>
        <li>
            <a href="https://www.pinterest.co.uk/royalroadofficial/" target="_blank" rel="noopener noreferrer" data-original-title="pinterest" class="pintrest" aria-label="Our Pinterest Page"></a>
        </li>
        <li>
            <a href="https://www.instagram.com/royalroad.official" target="_blank" rel="noopener noreferrer" data-original-title="instagram" class="instagram" aria-label="Our Instagram Page"></a>
        </li>
    </ul>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>